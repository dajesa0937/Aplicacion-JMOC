
@model IEnumerable<AppSenaJmoc.Models.Cliente>

@{
    ViewData["Title"] = "JMOC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Modulo Clientes</h3>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Nuevo Cliente</a>
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad_Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad_Cliente)
            </td>
            <td>
                <a class= "btn btn-primary" asp-action="Edit" asp-route-id="@item.Id_Cliente">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id_Cliente">Informacion</a> |
                <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id_Cliente">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
