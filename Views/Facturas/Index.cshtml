@model IEnumerable<AppSenaJmoc.Models.Factura>

@{
    ViewData["Title"] = "Modulo Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Factura</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear Factura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total_pagar_factura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tecnico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalle_factura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Total_pagar_factura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipo.Marca_Equipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnico.Apellidos_Tecnico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle_factura.Id_Detalle_factura)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id_factura">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id_factura">Informacion</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_factura">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
