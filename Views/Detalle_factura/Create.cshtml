@model AppSenaJmoc.Models.Detalle_factura

@{
    ViewData["Title"] = "Crear Detalle Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<h4 class="btn btn-success">Detalle Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cantidad_Detalle" class="control-label"></label>
                <input asp-for="Cantidad_Detalle" class="form-control" />
                <span asp-validation-for="Cantidad_Detalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Materiales" class="control-label"></label>
                <select asp-for="Id_Materiales" class ="form-control" asp-items="ViewBag.Id_Materiales"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
