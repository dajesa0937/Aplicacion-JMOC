@model AppSenaJmoc.Models.Presupuesto

@{
    ViewData["Title"] = "Crear Presupuesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Presupuesto</h1>

<h4 class="btn btn-success" >Presupuesto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Total_Pagar_Presupuesto" class="control-label"></label>
                <input asp-for="Total_Pagar_Presupuesto" class="form-control" />
                <span asp-validation-for="Total_Pagar_Presupuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora_Presupuesto" class="control-label"></label>
                <input asp-for="Hora_Presupuesto" class="form-control" />
                <span asp-validation-for="Hora_Presupuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_presupuesto" class="control-label"></label>
                <input asp-for="Fecha_presupuesto" class="form-control" />
                <span asp-validation-for="Fecha_presupuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Equipo" class="control-label"></label>
                <select asp-for="Id_Equipo" class ="form-control" asp-items="ViewBag.Id_Equipo"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id_Tecnico" class="control-label"></label>
                <select asp-for="Id_Tecnico" class ="form-control" asp-items="ViewBag.Id_Tecnico"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id_detalle_Presupuesto" class="control-label"></label>
                <select asp-for="Id_detalle_Presupuesto" class ="form-control" asp-items="ViewBag.Id_detalle_Presupuesto"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
