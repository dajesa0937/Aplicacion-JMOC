@model IEnumerable<AppSenaJmoc.Models.Equipo>

@{
    ViewData["Title"] = "Modulo Equipos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modulo Equipos</h1>

<p>
    <a class="btn btn-success"asp-action="Create">Crear Nuevo Equipo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca_Equipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie_Equipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca_Equipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie_Equipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre_Cliente)
            </td>
            <td>
                <a class="btn btn-primary"   asp-action="Edit" asp-route-id="@item.Id_Equipo">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id_Equipo">Informacion</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_Equipo">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
