@model AppSenaJmoc.Models.Materiales

@{
    ViewData["Title"] = "Crear Materiales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Materiales</h1>

<h4 class="btn btn-success">Materiales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre_Materiales" class="control-label"></label>
                <input asp-for="Nombre_Materiales" class="form-control" />
                <span asp-validation-for="Nombre_Materiales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion_materiales" class="control-label"></label>
                <input asp-for="Descripcion_materiales" class="form-control" />
                <span asp-validation-for="Descripcion_materiales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio_Materiales" class="control-label"></label>
                <input asp-for="Precio_Materiales" class="form-control" />
                <span asp-validation-for="Precio_Materiales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Existencias_Materiales" class="control-label"></label>
                <input asp-for="Existencias_Materiales" class="form-control" />
                <span asp-validation-for="Existencias_Materiales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Proveedor" class="control-label"></label>
                <select asp-for="Id_Proveedor" class ="form-control" asp-items="ViewBag.Id_Proveedor"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
